{
  "include": ["src/**/*"],
  "files": ["node_modules/@oursky/ts-skygear/index.d.ts"],
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "lib": ["ES5", "ES2015.Promise", "ES2015.Collection"],
